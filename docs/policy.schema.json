{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "thresholds": {
      "type": "object",
      "properties": {
        "block": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "review": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": [
        "block",
        "review"
      ]
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "required": [
    "thresholds"
  ]
}
